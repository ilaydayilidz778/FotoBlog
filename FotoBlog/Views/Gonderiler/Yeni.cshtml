@{
    ViewData["Title"] = "Yeni Gönderi Ekle";
}

@model YeniGonderiVewModel

<h2>@ViewData["Title"]</h2>

<form asp-controller="Gonderiler" asp-action="Yeni" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Baslik" class="form-label"></label>
        <input asp-for="Baslik" type="text" placeholder="Göderinize bir başlık ekleyiniz." class="form-control" />
        <span asp-validation-for="Baslik" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Resim" class="form-label"></label>
        <input asp-for="Resim" type="file" class="form-control" />
        <span asp-validation-for="Resim" class="text-danger"></span>
    </div>
    <div>
        @*  button elementinin defauşy davranışu submit'tir. *@
        <button type="submit" class="btn btn-primary">Ekle</button>
        <button asp-controller="Home" asp-action="Index" class="btn btn-secondary">İptal</button>
    </div>
</form>